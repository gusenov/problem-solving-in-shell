#!/bin/bash

# Скрипт, в котором в качестве параметров командной строки заданы имена файлов.

# Если задан один файл, то подсчитать число букв в этом файле:
if [ -n "$1" ] && [ -z "$2" ]; then
  wc -m "$1" | awk '{print $1}'

# Если задано два файла – подсчитать число слов:
elif [ -n "$1" ] && [ -n "$2" ] && [ -z "$3" ]; then
  a=$( wc -w "$1" | awk '{print $1}' )
  b=$( wc -w "$2" | awk '{print $1}' )
  echo "$(($a+$b))"

# Если задано три файла – подсчитать число строк:
elif [ -n "$1" ] && [ -n "$2" ] && [ -n "$3" ] && [ -z "$4" ]; then
  a=$( wc -l "$1" | awk '{print $1}' )
  b=$( wc -l "$2" | awk '{print $1}' )
  c=$( wc -l "$3" | awk '{print $1}' )
  echo "$(($a+$b+$c))"

# Иначе вывести сообщение об ошибке:
else
  echo "Ошибка!"

fi
