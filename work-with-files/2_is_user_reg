#!/bin/bash

# Скрипт, осуществляющий вывод сообщений о наличии или отсутствии
# зарегистрированного в системе пользователя, имя которого задано параметром.

user="$1"

# Список пользователей, зарегистрированных в системе,
# находится в файле /etc/passwd.

if cat /etc/passwd | cut -d : -f 1 | grep --quiet --regexp ^$user$; then
  echo "Пользователь $user зарегистрирован в системе."
else
  echo "Пользователь $user отсутствует."
fi
